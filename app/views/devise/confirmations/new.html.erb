<div class="d-flex align-items-center flex-column p-5">
  <h2>Resend confirmation instructions</h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "d-flex flex-column col-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "example@email.com", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.submit "Resend confirmation instructions", class: "btn btn-outline-primary col-8" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
