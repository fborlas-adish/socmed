<div class="card mb-3">
  <div class="d-flex card-header justify-content-between">
    <div>
        <%= post.user.full_name %>
    </div>
    <div>
        <%= link_to "", user_post_path(post.user, post), class: "btn-close", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </div>
  </div>
  <div class="d-flex flex-column card-body">
    <p class="card-text"><%= post.body %></p>
    <% if post.media.attached? %>
        <div class="flex-wrap">
            <% post.media.each do |media| %>
                <div class="flex-shrink-0 mb-1">
                    <img src="<%= (url_for(media))%>" class="p-3 img-fluid img-thumbnail rounded">
                </div>
            <% end%>
        </div>
    <% end %>
    <%= link_to "Open Post", [post.user, post], class: "btn btn-outline-primary" %>
  </div>
</div>    