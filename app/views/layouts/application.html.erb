<!DOCTYPE html>
<html>
  <head>
    <title>Socmed</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container-fluid">
        <% if notice %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>

        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      <%= yield %>
    </main>
  </body>
</html>
